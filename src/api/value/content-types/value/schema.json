{
  "kind": "singleType",
  "collectionName": "values",
  "info": {
    "singularName": "value",
    "pluralName": "values",
    "displayName": "Our Values"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "default": "ProSource's Values",
      "unique": true,
      "required": true
    },
    "description": {
      "type": "text"
    },
    "ogPublishDate": {
      "type": "date"
    },
    "coverImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "content": {
      "type": "richtext",
      "required": true
    }
  }
}
