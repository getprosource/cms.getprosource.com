{
  "kind": "collectionType",
  "collectionName": "news_stories",
  "info": {
    "singularName": "news-story",
    "pluralName": "news-stories",
    "displayName": "Company News",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "employee spotlight",
        "partner spotlight",
        "press release",
        "service announcement"
      ],
      "required": true
    },
    "ogPublishDate": {
      "type": "date"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "shared.tags"
    },
    "content": {
      "type": "richtext",
      "required": true
    }
  }
}
